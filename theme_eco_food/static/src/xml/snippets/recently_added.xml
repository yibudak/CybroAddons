<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
          <t t-name="theme_eco_food.eco_food_recently_added_products1"
             name="Ecofood Recently Added Products">
        <section class="recent_product">
            <div class="f_wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="featured_wrapper">
                                <div class="main_heading">
                                    <h1>
                                        Recently Added
                                    </h1>
                                    <p>
                                        Add products to weekly line up
                                    </p>
                                </div>
                                <div class="featured_slider">
                                    <div class="wrapper">
                                        <div class="owl-carousel favorite-carousel"
                                             id="demo_recent_product">
                                            <div>
                                                <div class="row">
                                                    <t t-foreach="slide1"
                                                       t-as="rp" t-if="slide1">
                                                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                                                            <div class="b_product">
                                                                <a t-attf-href="/shop/product/#{(rp[0].id)}">
                                                                    <div class="wrapper">
                                                                        <div class="img_wrapper">
                                                                            <img t-attf-src="/web/image?model=product.template&amp;field=image_1920&amp;id=#{(rp[0].id)}"/>
                                                                            <div class="inner">
                                                                                <a t-attf-href="/shop/product/#{(rp[0].id)}"
                                                                                   itemprop="url"
                                                                                   type="button"
                                                                                   class="quick_view scale-in-center">
                                                                                    <i
                                                                                            class="fa fa-search"/>
                                                                                </a>
                                                                            </div>
                                                                        </div>
                                                                        <div class="product_info">
                                                                            <div class="p_caregory">
                                                                                <span t-if="slide1"
                                                                                      t-esc="rp[0].categ_id.name"/>
                                                                            </div>
                                                                            <div class="p_name">
                                                                                <span t-if="slide1"
                                                                                      t-esc="rp[0].name"/>
                                                                            </div>
                                                                            <div class="p_rating ">
                                                    <div class="o_website_rating_static"
                                                         style="display:flex;"
                                                         t-att-style="inline_mode and 'display:inline'"
                                                         t-att-title="rating_avg">
                                                        <t t-call="portal_rating.rating_stars_static">
                                                            <t t-set="val"
                                                               t-value="rp[0].rating_avg || 0"/>
                                                        </t>
                                                    </div>
                                                </div>
                                                                            <div class="p_price ">
                                                                                <span t-if="slide1"
                                                                                      t-esc="rp.list_price"/>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="row">
                                                    <t t-foreach="slide2"
                                                       t-as="slide"
                                                       t-if="slide2">
                                                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                                                            <div class="b_product">
                                                                <a t-attf-href="/shop/product/#{(slide[0].id)}">
                                                                    <div class="wrapper">
                                                                        <div class="img_wrapper">
                                                                            <img t-attf-src="/web/image?model=product.template&amp;field=image_1920&amp;id=#{(slide[0].id)}"/>
                                                                            <div class="inner">
                                                                                <a href="#"
                                                                                   type="button"
                                                                                   data-toggle="modal"
                                                                                   data-target="#exampleModalCenter"
                                                                                   class="quick_view scale-in-center">
                                                                                    <i
                                                                                            class="fa fa-search"/>
                                                                                </a>
                                                                            </div>
                                                                        </div>
                                                                        <div class="product_info">
                                                                            <div class="p_caregory">
                                                                                <span t-if="slide2"
                                                                                      t-esc="slide[0].categ_id.name"/>
                                                                            </div>
                                                                            <div class="p_name">
                                                                                <span t-if="slide2"
                                                                                      t-esc="slide[0].name"/>
                                                                            </div>
                                                                            <div class="p_rating ">
                                                    <div class="o_website_rating_static"
                                                         style="display:flex;"
                                                         t-att-style="inline_mode and 'display:inline'"
                                                         t-att-title="rating_avg">
                                                        <t t-call="portal_rating.rating_stars_static">
                                                            <t t-set="val"
                                                               t-value="slide.rating_avg || 0"/>
                                                        </t>
                                                    </div>
                                                    </div>
                                                        <div class="p_price">
                                                            <span t-if="slide2"
                                                                  t-esc="slide.list_price"/>
                                                        </div>
                                                                        </div>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
</t>
</templates>