        <!-- Banner -->
        <!-- Contact section starts here -->
        <section class="contact">
            <div class="contact_form">
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <div class="contact_left">
                                <div class="wrapper">
                                    <span class="fa fa-home"/>
                                    <div class="rc">
                                        <h4>California United states</h4>
                                        <p>Santa monica bullevard</p>
                                    </div>
                                </div>
                                <div class="wrapper">
                                    <span class=" 	fa fa-phone-volume"/>
                                    <div class="rc">
                                        <h4>California United states</h4>
                                        <p>Mon to Fri 9am to 6 pm</p>
                                    </div>
                                </div>
                                <div class="wrapper">
                                    <span class=" 	far fa-envelope"/>
                                    <div class="rc">
                                        <h4>support@cybrosys.com</h4>
                                        <p>Send your query at any time</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="contact_right">
                                <div class="card">
                                    <form class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-5">
                                                <div class="md-form ">
                                                    <label for="firstName"
                                                           class="">Name
                                                    </label>
                                                    <input type="text"
                                                           id="firstName"
                                                           class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-2">
                                                <div class="md-form">
                                                    <label for="email"
                                                           class="">
                                                        Email
                                                    </label>
                                                    <input type="email"
                                                           id="email"
                                                           class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-2">
                                                <!--lastName-->
                                                <div class="md-form">
                                                    <label for="lastName"
                                                           class="">Subject
                                                    </label>
                                                    <input type="text"
                                                           id="lastName"
                                                           class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mt-2">
                                                <!--lastName-->
                                                <div class="md-form">
                                                    <label for="lastName"
                                                           class="">Message
                                                    </label>
                                                    <textarea type="text"
                                                              id="lastName"
                                                              class="form-control"
                                                              style="height: 150px;">
                                                    </textarea>
                                                </div>
                                            </div>
                                            <a href=" #" class="btn btn-send">
                                                SEND
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
