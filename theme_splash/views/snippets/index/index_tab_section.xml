                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                            <div class="tab_right">
                                                <img src="/theme_splash/static/src/images/tab/commercialsan.jpg"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Classic tabs -->
                </div>
            </div>
        </section>
    </template>
</odoo>