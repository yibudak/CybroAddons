<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="index_service_tab" name="Index Service Tab snippet">
<!--        Creates a tab section with two tabs, "Residential" and "Commercial", displaying information -->
<!--        and images about the sanitizing services offered for each type of property. -->
<!--        Each tab includes a list of icons representing the areas that can be sanitized-->
<!--        and a "Get Service Now" button.-->
        <section class="tab   ">
            <div class="container">
                <div class="tabs py-5">
                    <!-- Classic tabs -->
                    <div class="classic-tabs">
                        <ul class="nav tabs-cyan" id="myClassicTab"
                            role="tablist">
                            <li class="nav-item">
                                <a class="nav-link  active show"
                                   id="profile-tab-classic" data-toggle="tab"
                                   href="#profile-classic"
                                   role="tab" aria-controls="profile-classic"
                                   aria-selected="true">Residential
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="follow-tab-classic"
                                   data-toggle="tab" href="#follow-classic"
                                   role="tab"
                                   aria-controls="follow-classic"
                                   aria-selected="false">Commercial
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content " id="myClassicTabContent">
                            <div class="tab-pane fade active show"
                                 id="profile-classic" role="tabpanel"
                                 aria-labelledby="profile-tab-classic">
                                <div class="wrapper">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                            <div class="tab_left">
                                                <h4>
                                                    Residential sanitizing
                                                </h4>
                                                <p class="para">
                                                    Imagine your home so clean,
                                                    it’s clinically clean.
