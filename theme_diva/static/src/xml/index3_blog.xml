<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<!--    Blog post-->
    <t t-name="diva_index3_blog" name="Index 3 Blog">
        <div class="wrapper_3">
            <div class="heading_page3">
                <div class="main">
                    Blog posts
                </div>
            </div>
            <div class="blog_posts">
                <div class="container">
                    <div class="card-deck">
                        <t t-foreach="posts_recent" t-as="p">
                            <div class="card">
                                <p class="card-img-top">
                                    <div class="o_record_cover_container
                                    d-flex flex-column h-100 o_colored_level o_cc
                                    img_wrap">
                                        <div t-attf-style="background-image:
                                        {{getBackground(p.cover_properties)}}"
                                             class="o_record_cover_component o_record_cover_image "/>
                                    </div>
                                </p>
                                <div class="card-body">
                                    <a t-attf-href="/blog/#{p.blog_id[0]}/#{p.id}">
                                        <h5 class="card-title">
                                            <t t-esc="p.name"/>
                                        </h5>
                                    </a>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <t t-esc="changeDateFormat(p.published_date)"/>
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-more">VIEW MORE</a>
    </t>
</templates>