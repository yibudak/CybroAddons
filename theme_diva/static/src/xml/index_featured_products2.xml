<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<!--    Featured Products-->
    <t t-name="diva_index2_features" name="Index2 Featured Product">
        <div class="wrapper">
                <div class="heading">
                    <h3 class="main">Featured product</h3>
                </div>
                <div class="container">
                    <div class="row">
                        <t t-foreach="featured_products2"
                           t-as="fp2">
                            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                <div class="card mb-5 footer_duration">
                                    <img t-attf-src="/web/image?model=product.template&amp;field=image_1920&amp;id=#{fp2.id}"
                                         class="img img-fluid rotate-center"
                                         style="max-width: 150px; height: 100px;"
                                         alt="" loading="lazy"/>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a t-att-href="fp2.website_url">
                                                <span t-esc="fp2.name"/>
                                            </a>
                                        </h5>
                                        <p class="card-text">
                                            <sapn t-esc="currency_symbol"/>
                                            <span style="width:7px;"/>
                                            <span t-esc="fp2.list_price"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
    </t>
</templates>