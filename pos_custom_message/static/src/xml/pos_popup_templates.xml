<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<!-- Custom Message Alert Popup -->
	<t t-name="CustomMessageAlertPopup" owl="1">
		<Draggable>
			<div class="popup" >
				<!-- Header -->
				<header class="title drag-handle" style="background-color:pink;">
					<b>
						<i class='fa fa-bell'/>
						<t t-esc="props.title" class="fa-warning"/>
					</b>
				</header>
				<!-- Main Body -->
				<main class="body">
					<t t-esc=" props.body" />
				</main>
				<!-- Footer -->
				<footer class="footer">
					<div class="button btn-primary" t-on-click="cancel">
						<t t-esc="props.confirmText" />
					</div>
				</footer>
			</div>
		</Draggable>
	</t>
	<!-- Custom Message Info Popup -->
	<t t-name="CustomMessageInfoPopup" owl="1">
		<Draggable>
			<div class="popup" >
				<!-- Header -->
				<header class="title drag-handle" style="background-color:bisque;">
					<b>
						<i class='fa fa-exclamation-circle'/>
						<t t-esc="props.title" />
					</b>
				</header>
				<!-- Main Body -->
				<main class="body">
					<t t-esc=" props.body" />
				</main>
				<!-- Footer -->
				<footer class="footer">
					<div class="button btn-primary" t-on-click="cancel">
						<t t-esc="props.confirmText" />
					</div>
				</footer>
			</div>
		</Draggable>
	</t>
	<!-- Custom Message Warning Popup -->
	<t t-name="CustomMessageWarnPopup" owl="1">
		<Draggable>
			<div class="popup" >
				<!-- Header -->
				<header class="title drag-handle" style="background-color:darksalmon;">
					<b>
						<i class='fa fa-exclamation-triangle'/>
						<t t-esc="props.title" />
					</b>
				</header>
				<!-- Main Body -->
				<main class="body">
					<t t-esc=" props.body" />
				</main>
				<!-- Footer -->
				<footer class="footer">
					<div class="button btn-primary" t-on-click="cancel">
						<t t-esc="props.confirmText" />
					</div>
				</footer>
			</div>
		</Draggable>
	</t>
</templates>