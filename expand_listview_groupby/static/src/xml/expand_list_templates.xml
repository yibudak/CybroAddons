<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!--    expand button added in ListRenderer for expanding the list view-->
    <t t-name="expand_listview_groupby.expandButton"
       t-inherit="web.ListRenderer" t-inherit-mode="extension" owl="1">
        <xpath expr="//th[hasclass('o_list_actions_header')]" position="before">
            <th>
                <button id="expand_icon" style="height:25px !important;"
                        type="button"
                        class="btn btn-secondary fa fa-expand oe-list-expand"
                        aria-label="Expand" t-on-click="onListExpandData"/>
            </th>
        </xpath>
    </t>
</templates>
