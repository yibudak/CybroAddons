                                        <div class="col-lg-6 col-12">
                                            <div class="banner_right">
                                                <a href="#"
                                                   class="btn btn-primary">
                                                    MORE ABOUT RADER
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Section banner ends here -->
        </section>
    </template>
</odoo>