<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Inherit the res_config_settings_view_form and add a field purchase limit-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.purchase.limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_info_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="purchase_limit">
                    <div class="o_setting_left_pane">
                        <field name="enabled_limit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="purchase_limit" string="Purchase Limit"/>
                        <field name="purchase_limit"
                               attrs="{'invisible': [('enabled_limit', '=', False)]}"/>
                        <div class="text-muted mb16">
                            Set a purchase limit
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>