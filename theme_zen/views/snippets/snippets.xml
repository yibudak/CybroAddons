<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Theme zen snippets inherits -->
    <template id="theme_zen_snippets" inherit_id="website.snippets" name="Theme Zen snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_zen.index_about"
               t-thumbnail="/theme_zen/static/src/img/snippets/about-1.png"/>
            <t t-snippet="theme_zen.banner"
               t-thumbnail="/theme_zen/static/src/img/snippets/banner_section-1.png"/>
            <t t-snippet="theme_zen.zen_blog"
               t-thumbnail="/theme_zen/static/src/img/snippets/blog-1.png"/>
            <t t-snippet="theme_zen.zen_client"
               t-thumbnail="/theme_zen/static/src/img/snippets/client-1.png"/>
            <t t-snippet="theme_zen.zen_recent"
               t-thumbnail="/theme_zen/static/src/img/snippets/recent-1.png"/>
            <t t-snippet="theme_zen.zen_members"
               t-thumbnail="/theme_zen/static/src/img/snippets/testimonial-1.png"/>
            <t t-snippet="theme_zen.zen_video"
               t-thumbnail="/theme_zen/static/src/img/snippets/Video.png"/>
        </xpath>
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_zen.headings"
               t-thumbnail="/theme_zen/static/src/img/snippets/about-1.png"/>
            <t t-snippet="theme_zen.blog_banner"
               t-thumbnail="/theme_zen/static/src/img/snippets/blog-1.png"/>
            <t t-snippet="theme_zen.portfolio_banner"
               t-thumbnail="/theme_zen/static/src/img/snippets/Portfolio.png"/>
            <t t-snippet="theme_zen.heading"
               t-thumbnail="/theme_zen/static/src/img/snippets/service_page.png"/>
        </xpath>
    </template>
</odoo>