<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_mail_track" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.direct_send_email_template</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='quotation_order_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="direct_send_sale_settings">
                    <div class="o_setting_left_pane">
                        <field name="is_direct_send_email_sale"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Direct Send Email</span>
                        <div class="text-muted">Direct Send Sale By Mail</div>
                        <div class="row mt16" attrs="{'invisible': [('is_direct_send_email_sale', '=', False)]}">
                            <label for="direct_send_mailtemplate_sq" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_sq" class="oe_inline"/>
                            <label for="direct_send_mailtemplate_so" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_so" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="direct_send_purchase_setting">
                    <div class="o_setting_left_pane">
                        <field name="is_direct_send_email_purchase"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Direct Send Email</span>
                        <div class="text-muted">Direct Send Purchase By Mail</div>
                        <div class="row mt16" attrs="{'invisible': [('is_direct_send_email_purchase', '=', False)]}">
                            <label for="direct_send_mailtemplate_prfq" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_prfq" class="oe_inline"/>
                            <label for="direct_send_mailtemplate_po" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_po" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_account" model="ir.ui.view">
        <field name="name">res.config.settings.account.view.form.inherit.direct_send_email_template</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='default_taxes_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="direct_send_account_email_setting">
                    <div class="o_setting_left_pane">
                        <field name="is_direct_send_email_account"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Direct Send Email</span>
                        <div class="text-muted">Direct Send Account By Mail</div>
                        <div class="row mt16" attrs="{'invisible': [('is_direct_send_email_account', '=', False)]}">
                            <label for="direct_send_mailtemplate_inv" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_inv" class="oe_inline"/>
                            <label for="direct_send_mailtemplate_credit" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_credit" class="oe_inline"/>
                            <label for="direct_send_mailtemplate_bill" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_bill" class="oe_inline"/>
                            <label for="direct_send_mailtemplate_refund" class="col-lg-4 o_light_label"/>
                            <field name="direct_send_mailtemplate_refund" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
