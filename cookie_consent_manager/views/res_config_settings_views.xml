<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Cookie settings on the configuration-->
    <record id="res_config_settings_view_form"
            model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.cookie.consent.manager
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_cookies_bar_setting']"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                     attrs="{'invisible': [('website_cookies_bar', '=', False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="cookie_template_id"/>
                        <br/>
                        <field name="cookie_template_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
